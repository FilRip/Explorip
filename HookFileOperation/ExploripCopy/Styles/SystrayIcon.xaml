<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                    xmlns:tb="http://www.hardcodet.net/taskbar"
                    xmlns:viewmodels="clr-namespace:ExploripCopy.ViewModels"
                    xmlns:constants="clr-namespace:ExploripCopy.Constants">
    <ContextMenu x:Shared="false" x:Key="SysTrayMenu">
        <MenuItem Header="{x:Static constants:Localization.SHOW_MAIN_WINDOW}" Command="{Binding ShowWindowCommand}" Margin="0" Padding="0" BorderThickness="1"/>
        <MenuItem Header="{x:Static constants:Localization.SHOW_NOTIFICATION}" IsChecked="{Binding ActiveShowNotification}" Command="{Binding ShowNotificationCommand}" Margin="0" Padding="0" BorderThickness="1"/>
        <Separator/>
        <MenuItem Header="{x:Static constants:Localization.QUIT}" Command="{Binding ExitApplicationCommand}" Margin="0" Padding="0" BorderThickness="1"/>
    </ContextMenu>
    <tb:TaskbarIcon x:Key="NotifyIcon"
                    IconSource="{Binding SystrayIcon, UpdateSourceTrigger=PropertyChanged}"
                    ToolTipText="ExploripCopy"
                    DoubleClickCommand="{Binding ShowWindowCommand}"
                    ContextMenu="{StaticResource SysTrayMenu}">
        <tb:TaskbarIcon.DataContext>
            <viewmodels:NotifyIconViewModel/>
        </tb:TaskbarIcon.DataContext>
    </tb:TaskbarIcon>
</ResourceDictionary>
