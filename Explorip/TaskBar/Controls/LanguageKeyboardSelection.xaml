<Window x:Class="Explorip.TaskBar.Controls.LanguageKeyboardSelection"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Explorip.TaskBar.Controls"
        xmlns:viewmodels="clr-namespace:Explorip.TaskBar.ViewModels"
        xmlns:colors="clr-namespace:ExploripSharedCopy.Constants;assembly=ExploripSharedCopy"
        mc:Ignorable="d"
        Title="LanguageKeyboardSelection" Height="450" Width="800">
    <ItemsControl ItemsSource="{Binding LanguagesList}">
        <ItemsPanelTemplate>
            <StackPanel Orientation="Vertical"/>
        </ItemsPanelTemplate>
        <ItemsControl.ItemTemplate>
            <DataTemplate DataType="viewmodels:LanguageViewModel">
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="auto"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="auto"/>
                        <RowDefinition Height="*"/>
                    </Grid.RowDefinitions>
                    <TextBlock Grid.RowSpan="2" Background="Transparent" Foreground="{x:Static colors:Colors.ForegroundColorBrush}" Text="{Binding ShortName}"/>
                    <TextBlock Grid.Column="1" Grid.Row="0" Background="Transparent" Foreground="{x:Static colors:Colors.ForegroundColorBrush}" Text="{Binding FullName}"/>
                    <TextBlock Grid.Column="1" Grid.Row="1" Background="Transparent" Foreground="{x:Static colors:Colors.ForegroundColorBrush}" Text="{Binding Details}"/>
                </Grid>
            </DataTemplate>
        </ItemsControl.ItemTemplate>
    </ItemsControl>
</Window>
