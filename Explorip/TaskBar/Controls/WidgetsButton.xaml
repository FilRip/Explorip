<UserControl x:Class="Explorip.TaskBar.Controls.WidgetsButton"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:viewmodels="clr-namespace:Explorip.TaskBar.ViewModels">
    <UserControl.DataContext>
        <viewmodels:WidgetsButtonViewModel/>
    </UserControl.DataContext>
    <ToggleButton ToolTip="{DynamicResource WidgetsButtonTip}"
                  Command="{Binding ShowWidgetsCommand}"
                  Name="Widgets"
                  Style="{DynamicResource WidgetsButton}">
        <Image Style="{DynamicResource WidgetsIcon}"/>
    </ToggleButton>
</UserControl>
