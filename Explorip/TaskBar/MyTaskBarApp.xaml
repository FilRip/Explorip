<Application x:Class="Explorip.TaskBar.MyTaskbarApp"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             ShutdownMode="OnExplicitShutdown"
             Exit="App_OnExit" Startup="Application_Startup"
             SessionEnding="App_OnSessionEnding">
    <Application.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="Themes/System.xaml" />
                <ResourceDictionary Source="Styles/StyleContextMenu.xaml"/>
                <ResourceDictionary Source="Styles/StyleWindow.xaml"/>
            </ResourceDictionary.MergedDictionaries>
        </ResourceDictionary>
    </Application.Resources>
</Application>