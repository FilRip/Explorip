<Window x:Class="Explorip.Helpers.MyAdornerWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d"
        AllowsTransparency="True"
        IsHitTestVisible="False"
        AllowDrop="False"
        Focusable="False"
        WindowStyle="None"
        ShowInTaskbar="False"
        Topmost="True"
        Background="Transparent"
        UseLayoutRounding="True">
    <Border Name="MyAdornerBorder"
            BorderThickness="0"
            Opacity="0"
            UseLayoutRounding="True"
            CornerRadius="0"
            IsHitTestVisible="False"
            Focusable="False"
            AllowDrop="False">
        <Image Name="MyAdornerImage"
               Source="/Resources/ErrorIcon.ico"
               UseLayoutRounding="True"
               IsHitTestVisible="False"
               Focusable="False"
               AllowDrop="True"/>
    </Border>
</Window>
