<UserControl x:Class="Explorip.TaskBar.Controls.Clock"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:constants="clr-namespace:Explorip.Constants"
             MouseLeftButtonDown="Clock_OnMouseLeftButtonDown"
             MouseDoubleClick="Clock_OnMouseDoubleClick">
    <TextBlock Style="{DynamicResource Clock}"
               Text="{Binding ClockText}"
               ToolTip="{Binding ClockTip}"
               Name="ClockTextBlock"
               Visibility="Collapsed" />
    <UserControl.ContextMenu>
        <ContextMenu Background="{Binding Source={x:Static constants:Colors.BackgroundColorBrush}}" Foreground="{Binding Source={x:Static constants:Colors.ForegroundColorBrush}}" BorderBrush="{Binding Source={x:Static constants:Colors.ForegroundColorBrush}}">
            <ContextMenu.ItemsPanel>
                <ItemsPanelTemplate>
                    <StackPanel Margin="-20,0,0,0" Background="{Binding Source={x:Static constants:Colors.BackgroundColorBrush}}"/>
                </ItemsPanelTemplate>
            </ContextMenu.ItemsPanel>
            <MenuItem Header="{Binding Source={x:Static constants:Localization.ADJUST_DATE_TIME}}" Click="MenuItem_OnClick" />
        </ContextMenu>
    </UserControl.ContextMenu>
</UserControl>
