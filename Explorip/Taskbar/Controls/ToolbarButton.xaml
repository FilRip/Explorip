<UserControl x:Class="Explorip.TaskBar.Controls.ToolbarButton"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:constants="clr-namespace:Explorip.Constants"
             Background="{Binding Source={x:Static constants:Colors.BackgroundColorBrush}}">
    <Button ToolTip="{Binding Path=DisplayName}"
            Style="{DynamicResource ToolbarButton}">
        <Image Source="{Binding Path=SmallIcon, Mode=OneWay}"
               Style="{DynamicResource ToolbarIcon}" />
    </Button>
</UserControl>
