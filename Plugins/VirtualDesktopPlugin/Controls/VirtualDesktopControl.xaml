<UserControl x:Class="VirtualDesktopPlugin.Controls.VirtualDesktopControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:VirtualDesktopPlugin.Controls"
             xmlns:viewmodels="clr-namespace:VirtualDesktopPlugin.ViewModels"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800" Background="Transparent">

    <UserControl.DataContext>
        <viewmodels:VirtualDesktopControlViewModel/>
    </UserControl.DataContext>
    
    <StackPanel Orientation="Horizontal" Background="Transparent">
        <Button BorderThickness="0" Command="{Binding MoveToLeftDesktopCommand}" Content="&#xE760;" FontFamily="Segoe MDL2 Assets" FontSize="12" Foreground="{Binding AccentColor}" Background="Transparent"/>
        <ComboBox IsEditable="False" Width="50" ItemsSource="{Binding ListDesktop}" Height="12" SelectedItem="{Binding SelectedDesktop.Name, UpdateSourceTrigger=PropertyChanged, Mode=TwoWay}" FontSize="12" Foreground="{Binding Foreground}" Background="Transparent">
            <ComboBox.ItemTemplate>
                <DataTemplate>
                    <TextBlock Text="{Binding Name}" Background="Transparent" Foreground="{Binding Foreground, RelativeSource={RelativeSource AncestorType=StackPanel, Mode=FindAncestor}}"/>
                </DataTemplate>
            </ComboBox.ItemTemplate>
        </ComboBox>
        <Button BorderThickness="0" Command="{Binding MoveToRightDesktopCommand}" Content="&#xE761;" FontFamily="Segoe MDL2 Assets" FontSize="12" Foreground="{Binding AccentColor}" Background="Transparent"/>
    </StackPanel>
    
</UserControl>
