<UserControl x:Class="VirtualDesktopPlugin.Controls.VirtualDesktopControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:VirtualDesktopPlugin.Controls"
             xmlns:viewmodels="clr-namespace:VirtualDesktopPlugin.ViewModels"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800" Background="Transparent">

    <UserControl.Resources>
        <BooleanToVisibilityConverter x:Key="boolToVisible"/>
    </UserControl.Resources>
    <UserControl.DataContext>
        <viewmodels:VirtualDesktopControlViewModel/>
    </UserControl.DataContext>
    
    <StackPanel Orientation="Horizontal" Background="Transparent">
        <Grid>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="auto"/>
                <ColumnDefinition Width="auto"/>
                <ColumnDefinition Width="auto"/>
                <ColumnDefinition Width="auto"/>
            </Grid.ColumnDefinitions>
            <Button Grid.Column="0" BorderThickness="0" Command="{Binding MoveToLeftDesktopCommand}" Content="&#xE760;" FontFamily="Segoe MDL2 Assets" FontSize="12" Foreground="{Binding AccentColor}" Background="Transparent"/>
            <TextBlock Grid.Column="1" Width="50" Text="{Binding SelectedDesktop.Name, UpdateSourceTrigger=PropertyChanged, Mode=OneWay}" FontSize="12" Foreground="{Binding Foreground}" Background="Transparent"/>
            <Popup Placement="Mouse" StaysOpen="False" IsOpen="{Binding ShowDropDown}" AllowsTransparency="True">
                <Border CornerRadius="10" BorderThickness="0" Background="{Binding Background}">
                    <ItemsControl Margin="0" Background="Transparent" Foreground="{Binding Foreground}" ItemsSource="{Binding DataContext.ListDesktopName, RelativeSource={RelativeSource AncestorType=StackPanel, Mode=FindAncestor}}"/>
                </Border>
            </Popup>
            <Button Grid.Column="2" BorderThickness="0" Command="{Binding DropDownListDesktopCommand}" Content="&#xEB0F;" FontFamily="Segoe MDL2 Assets" FontSize="12" Foreground="{Binding Foreground}" Background="Transparent"/>
            <Button Grid.Column="3" BorderThickness="0" Command="{Binding MoveToRightDesktopCommand}" Content="&#xE761;" FontFamily="Segoe MDL2 Assets" FontSize="12" Foreground="{Binding AccentColor}" Background="Transparent"/>
        </Grid>
    </StackPanel>
    
</UserControl>
